@{
}

@using TechJobsPersistent.ViewModels

@model AddUserViewModel
<h1>Add User:</h1>


<form method="POST" action="SubmitAddUserForm">
    <div class="form-group">
        <label asp-for="Name">Name: </label>
        <input class="form-control" asp-for="Name" value=@Model.Name required/>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        
            <label asp-for="Location">Location:    </label>
            </br>
            <select asp-for="Location" class="input-group-text">

                @foreach (string l in ViewBag.locations)
                {

                    <option class="dropdown-item" value=@l>@l</option>
                }
            </select>
        
        <span asp-validation-for="Location"></span>

    </div>

    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input class="form-control" asp-for="Email" value=@Model.Email/>
        <span asp-validation-for="Email"></span>
    </div>

    <input class="btn btn-primary" type='submit' value='Submit'>







</form>